<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="txtStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0000FF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StyleEditText">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">10dp</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#B7B5B5</item>
        <item name="android:textSize">21sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="styleButton">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">47dp</item>

        <!--        <item name="android:background">@color/white</item>-->
        <item name="backgroundTint">#145510</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="styleButtonSolid">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:layout_marginBottom">62dp</item>
        <item name="android:background">@drawable/shapebtn</item>
        <!--        <item name="backgroundTint">#248D1D</item>-->
        <item name="android:textColor">#248D1D</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <!-- Your dark theme attributes -->
        <item name="android:background">#333333</item>
        <item name="colorPrimary">#2196F3</item>
        <!-- Add other dark theme attributes -->
    </style>

    <style name="textfieldsstyls">
        <item name="android:layout_width">368dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">44dp</item>
        <item name="android:layout_marginBottom">35dp</item>
    </style>

    <style name="Regtextfieldsstyls">
        <item name="android:layout_width">368dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">1dp</item>
        <!--        <item name="android:layout_marginBottom">35dp</item>-->
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/shapebtn</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:popupBackground">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomSpinnerStyle1" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner1_background</item>
        <!-- Add other style properties here -->
    </style>

</resources>